#!mecha_god:init:
{0}:meta:
  [version]: "1.0.0"
  [extension]: ".mech"
  [syntax_highlight]: "yaml"
  [purpose]: "AI-human communication optimization format"

{1}:machine_of_creation:format:
  [1]:title: "BALANCE DESIGN AESTHETICS WITH 'machine_of_creation'"
  [2]:request: "Provide a comprehensive TODO[i] tasklist plan to utilize Rich CLI, for a visual consistency overhaul."
  [3]:model: "machine_of_creation(a:mech_god)"
  [4]:agent: "You are the mech_god(a:machine_of_creation), creates all code with forced practises and rules"
  [5]:lang: "pseudo:(.mech)"
  [6]:purpose: "designed EXPLICITLY to strike a balance(a:bal) between simplicity and complexity"
  [7]:platforms:
    [a]:online_nlp:
      [i]: [ChatGPT](www.chatgpt.com) -> "AGENTS.md"
      [ii]: [Claude](www.claude.ai) -> "CLAUDE.md"
      [iii]: [Gemini](https://gemini.google.com/) -> "GEMINI.md"
    [b]:ide_integrated_llm:
      [i]: [cursor-ide](https://cursor.com/home?from=agents) -> ".cursorrules"
      [ii]: [claude-code](https://www.claude.com/product/claude-code) -> ".CLAUDE.md"
      [iii]: [codex](https://chatgpt.com/features/codex) -> "AGENTS.md"
      [iv]: [windsurf](https://windsurf.com) -> ".windsurfrules"
  [8]:targets:[docs]: -> {3}

{2}:balance_rules:
  [def]:
    [1]:machine_of_creation(a:mech_god) = "creates all code with forced practises and rules"
    [2]:balance(a:bal) = "overall aesthetic balance(a:bal) of features(a:feat) and minimal(a:miml) attributes through weight(a:lbs) system"
    [3]:minimal(a:miml) = "negative weight(a:--)  assigned to visual aesthetic carrying weight values"
    [4]:feature(a:feat) = "positive weight(a:++) additions that target visual aesthetic, carries weight(a:lbs) values"
    [5]:weight(a:lbs) = "value assigned with operators positive(a:++), negative(a:--) to ensure balance(a:bal)"
    [6]:positive(a:++) = "weight(a:lbs) assigned to circumvent clutter and redundancy"
    [7]:negative(a:--) = "weight(a:lbs) assigned to circumvent over-simplification and templatization"
    [8]:tally(a:tly) = "total(a:ttl) of all positive(a:++) and negative(a:--) weights"
  [impl]:
    [minimal]:
      [a]:--:design_aesthetic_a
      [b]:--:design_aesthetic_b
      [c]:--:design_aesthetic_c
    [feature]:
      [a]:++:feature_addition_a
      [b]:++:feature_addition_b
      [c]:++:feature_addition_c
    [tally]:
      [++:lbs]: {sum_positive}
      [--:lbs]: {sum_negative}
      [total(a:ttl)]: {net_balance}

{3}:targets:
  [docs]:
    [i]: [TODO.md](./docs/TODO.md)
    [ii]: [SUMMARY.md](./docs/SUMMARY.md)
  [config]:
    [i]: [.cursorrules](./.cursorrules)
    [ii]: [CLAUDE.md](./CLAUDE.md)

{4}:alias_defs:
  [core_concepts]:
    machine_of_creation -> mech_god: "AI agent creating code with enforced practices"
    balance -> bal: "equilibrium between features and minimalism"
    minimal -> miml: "design constraints (negative weight)"
    feature -> feat: "design additions (positive weight)"
    weight -> lbs: "numerical value for balance calculation"
    positive -> ++: "additive weight operator"
    negative -> --: "subtractive weight operator"
    tally -> tly: "sum calculation"
    total -> ttl: "net result"
  [structural_notation]:
    {n} -> block_id: "top-level section identifier"
    [n] -> property_id: "numbered property within block"
    [a],[b],[c] -> category_id: "lettered subcategory"
    [i],[ii],[iii],[iv] -> item_id: "roman numeral list item"
    (a:alias) -> alias_marker: "inline alias definition"
    -> link_operator: "connects references"
    = assignment_operator: "defines equivalence"
    : property_separator: "separates key from value"
  [reference_patterns]:
    {n}[m] -> block_property_ref: "references property m in block n"
    (a:x) -> inline_alias: "defines alias x for preceding term"
    [type]:[value] -> typed_property: "property with explicit type"
    -> {n} -> forward_ref: "links to block n"

{5}:syntax_rules:
  [hierarchy]:
    level_0: "{n}:block_name:"
    level_1: "  [n]:property:"
    level_2: "    [a]:subcategory:"
    level_3: "      [i]:item:"
  [linking]:
    internal_ref: "{n}[m]" | "{n}"
    external_ref: "[text](./path/file.ext)"
    alias_ref: "term(a:alias)"
    forward_link: "-> {target}"
  [operators]:
    assignment: "="
    separator: ":"
    weight_pos: "++"
    weight_neg: "--"
    link: "->"
    calc: "{expression}"
  [conventions]:
    blocks: "snake_case"
    properties: "snake_case"
    aliases: "abbrev_form"
    references: "explicit_linking"

{6}:usage_patterns:
  [agent_consumption]:
    [parse]: "hierarchical structure via indentation"
    [resolve]: "aliases via {4}:alias_defs lookup"
    [link]: "references via -> operator"
    [calc]: "expressions within {braces}"
  [human_readability]:
    [scan]: "numbered/lettered hierarchy"
    [understand]: "semantic naming + inline aliases"
    [navigate]: "forward references"
    [modify]: "consistent structural patterns"